<select name="category" id="category<%= categories %>" class="required">
  <option value="">--请选择--</option>
  <% Category.category_tree.each do |category| %>
    <option value="<%= category.id %>">
      <% (0..Category.level(category)).each do |level| %>&nbsp;<% end %><%= category.name %>   
    </option>
  <% end if Category.category_tree.any? %>
</select>
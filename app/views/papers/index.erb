
<div class="main_box_back">
  <h2><span>试卷列表</span><div class="right"><%= link_to "新建卷子","/papers/new" %></div></h2>
  <div class="in">
    <table>
      <colgroup>
        <col width="140" />
        <col width="100" />
        <col width="80" />
        <col width="140" />
        <col width="180" />
        <col width="" />
      </colgroup>
      <thead>
        <tr>
          <th>试卷编号</th>
          <th>标题</th>
          <th>创建日期</th>
          <th>试题数</th>
          <th>备注</th>
         <th>类型</th>
          <th></th>
        </tr>
      </thead>
     
           <tbody>
        <% @papers.each do |paper| %>
          <tr>
            <td><%= paper.id  %></td>
            <td>  <%= paper.title  %></td>
            <td> <%= paper.created_at.strftime("%Y-%m-%d")  %></td>
            <td> <%= paper.total_question_num %></td>
            <td> <%= paper.description  %></td>
            <td> <%= paper.paper_category_id %></td>
            <td><a><%= link_to " 查看" ,paper %>
                &nbsp;|&nbsp; <%= link_to "编辑 ", paper %></a></td>
          </tr>
        <% end  %>  
           </tbody>
    </table>
    <div class="pagination_box">
      <tr>
         <div class="pagination">
    <%=will_paginate @papers ,:previous_label=>"«", :next_label=>"»", :inner_window => 1 %></div>
<span class="disabled prev_page"><div>当前第<%= @papers.current_page%>页 | 共 <%= @papers.total_entries %> 条 | 共 <%= @papers.total_pages %> 页</div></span>
      </tr>

    </div>
  </div>
</div>

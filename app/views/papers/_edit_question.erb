<div class="products_list_style_box" id="edit_question_<%= edit_question[:point].id %>" style="display: none;">
  <div class="arrow" style="top:10px;"></div>
  <div class="big_pic_box" style="top:0px;">
    <div class="in">
      <% form_for :question ,:url=>"/questions/edit" do |f| %>
        <%= f.hidden_field :block_id ,:value=>edit_question[:block].id  %>
        <%= f.hidden_field :paper_id ,:value=>@paper.id  %>
        <%= f.hidden_field :attr_ids ,:value=>edit_question[:attr_ids_array] %>
        <div class="title">题目类型：</div>
        <div class="type"><%= f.radio_button :types ,:name=>"type",:id=>"radio1"%>单选题</div>
        <div class="type"><%= f.radio_button :types ,:name=>"type",:id=>"radio2"%>多选题</div>
        <div class="type"><%= f.radio_button :types ,:name=>"type",:id=>"radio3"%>判断题</div>
        <div class="type"><%= f.radio_button :types ,:name=>"type",:id=>"radio4"%>完形填空题</div>
        <div class="type"><%= f.radio_button :types ,:name=>"type",:id=>"radio5"%>综合题</div>
        <div class="clear"></div>
        <div class="title">题面：</div>
        <%= f.text_area :title ,:cols=>"45",:rows=>"3",:class=>"textarea_style" ,:value=>edit_question[:point].question.title %>
        <div class="title">选项：<div class="chose_add"><a href="#">增加选项</a></div></div>
        <div class="clear"></div>
        
        <%  t=[] %>
          <%  index=0 %>
        <% edit_question[:point].question_attrs.each do |attr| %>
         <% index += 1 %>
        <%  t[index] = attr %>
        <% end %>
        <% index=0 %>
        <div class="question">
          <div class="attr"><%= f.text_field :attr1_key ,:class=>"input_style",:value=>t[1].key,:size=>"5"%> 、 <%= f.text_field :attr1_value ,:class=>"input_style",:value=>t[1].value%></div>
          <div class="attr"><%= f.text_field :attr2_key ,:class=>"input_style",:value=>t[2].key,:size=>"5"%> 、 <%= f.text_field :attr2_value ,:class=>"input_style",:value=>t[2].value%></div>
          <div class="attr"><%= f.text_field :attr3_key ,:class=>"input_style",:value=>t[3].key,:size=>"5"%> 、 <%= f.text_field :attr3_value ,:class=>"input_style",:value=>t[3].value%></div>
          <div class="attr"><%= f.text_field :attr4_key ,:class=>"input_style",:value=>t[4].key,:size=>"5"%> 、 <%= f.text_field :attr4_value ,:class=>"input_style",:value=>t[4].value%></div>
        </div>
        <div class="answer">答案：<%= f.text_field :answer ,:class=>"input_style",:size=>"40",:value=>edit_question[:point].answer%></div>
        <% score = edit_question[:point].question.block_question_relations.find_by_paper_block_id(edit_question[:block]).score %>
        <div class="answer">分值：<%= f.text_field :score ,:class=>"input_style",:value=>score %></div>
        <div class="title">评分规则：</div>
        <%= f.text_area :assess_role ,:cols=>"45",:rows=>"3",:class=>"textarea_style"  %>
        <%= f.submit "提交" ,:class=>"submit_btn" %>
      <% end %>
    </div>
  </div>
</div>
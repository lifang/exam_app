<table>
  <colgroup>
    <col width="160"/>
    <col width="180" />
    <col width="180" />
    <col width="60"/>
  </colgroup>
  <thead>
    <tr>
      <th>姓名</th>
      <th>手机号码</th>
      <th>email</th>
      <th></th>
    </tr>
  </thead>
  <tbody id="add" name="add">
    <% if @exam_users.blank? %>
      <tr id="1">
        <td colspan="4">
          <%= form_remote_tag :url => "/exam_users/create_exam_user" , :method => "get",
            :html => {:class => "required-validate"}, :update => "exam_user_list"  do -%>
            <input type="hidden" name="examination_id" id="examination_id" value="<%= @examination.id %>"/>
            <table>
              <tr>
                <td><input type="text" name="infoname" id="infoname1" class="required" size="30"/></td>
                <td><input type="text" name="infomobile" id="infomobile1" class="required" size="30"/></td>
                <td><input type="text" name="infoemail" id="infoemail1" class="required" size="30"/></td>
                <td><button type="submit">创建</button></td>
              </tr>
            </table>
          <% end -%>
        </td>
      </tr>
      <tr id="2">
        <td colspan="4">
          <%= form_remote_tag :url => "/exam_users/create_exam_user" , :method => "get",
            :html => {:class => "required-validate"}, :update => "exam_user_list"  do -%>
            <input type="hidden" name="examination_id" id="examination_id" value="<%= @examination.id %>"/>
            <table>
              <tr>
                <td><input type="text" name="infoname" id="infoname1" class="required" size="30"/></td>
                <td><input type="text" name="infomobile" id="infomobile1" class="required" size="30"/></td>
                <td><input type="text" name="infoemail" id="infoemail1" class="required" size="30"/></td>
                <td><button type="submit">创建</button></td>
              </tr>
            </table>
          <% end -%>
        </td>
      </tr>
      <tr>
        <td colspan="4">
          <input type="hidden" id="add_rows" name="add_rows" value="2" />
          <input type="hidden" id="textarea" name="textarea" />
          <%= link_to "追加","javascript:void(0);",
            :onclick=>"javascript:add_item('add', '/exam_users/create_exam_user', 'exam_user_list', '#{@examination.id}')" %>
        </td>
      </tr>
    <% else %>
      <% @exam_users.each do |exam_user| %>
        <%
        class_name = "never"
        if exam_user.is_user_affiremed == true
          class_name = "ever"
        end
      %>
        <tr class="<%= class_name %>" id="tr_exam_user_<%= exam_user.id %>">
          <td><%= exam_user.name %></td>
          <td><%= exam_user.mobilephone %></td>
          <td><%= exam_user.email %></td>
          <td><a href="#">编辑</a>&nbsp;|&nbsp;
            <%= link_to_remote "删除", :url => "/exam_users/#{exam_user.id}", :method => :delete,
              :confirm => "您确定要删除当前考生么？", :update => "tr_exam_user_#{exam_user.id}" %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="4">
          <input type="hidden" id="add_rows" name="add_rows" value="2" />
          <input type="hidden" id="textarea" name="textarea" />
          <%= link_to "追加","javascript:void(0);",
            :onclick=>"javascript:add_item('add', '/exam_users/create_exam_user', 'exam_user_list', '#{@examination.id}')" %>
        </td>
      </tr>
      <tr>
        <td colspan="4">
          <div class="pagination_box">
            <%=will_paginate_remote(@exam_users , "kind=exam_user" , {:update => 'exam_user_list', :url => "/examinations/#{@examination.id}"})%>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
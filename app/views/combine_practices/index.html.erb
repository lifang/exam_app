<div class="main_box_back">
  <div class="in">
    <h2><span>综合训练列表</span></h2>
    <table>
      <colgroup>
        <col width="280" />
        <col  width="100" />
        <col width="210" />
        <col width="80" />
        <col width="80" />
        <col width="60" />
        <col width="" />
      </colgroup>
      <thead>
        <tr>
          <th style="text-align:center">标题</th>
          <th style="text-align:center" >所属分类</th>
          <th style="text-align:center">创建日期</th>
          <th style="text-align:center">试题数</th>
          <th style="text-align:center">总分</th>
          <th style="text-align:center"></th>
        </tr>
      </thead>
      <tbody>
        <% if @combine_practices.nil? %>
        <td align="center" colspan="8">目前您还没有综合训练，您可以去试卷管理 <a href="/papers">安排综合训练</a></td>
      <%else%>
        <% @combine_practices.each do |combine_practice| %>
          <tr>
            <td style="text-align:center"><%= combine_practice.title %></td>
            <td style="text-align:center"><%= combine_practice.papers[0].category.name %></td>
            <td style="text-align:center"><%= combine_practice.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
            <td style="text-align:center"><%= combine_practice.papers[0].total_question_num %></td>
            <td style="text-align:center"><%= combine_practice.papers[0].total_score %></td>
            <td style="text-align:center"><%= link_to "编辑","/papers/#{combine_practice.papers[0].id}/new_step_two" %></td>
          </tr>
        <%end%>
      <%end%>
      </tbody>
    </table>
  </div>
</div>






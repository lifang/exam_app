<table>
  <colgroup>
    <col width="40"/>
    <col width="300" />
    <col width="60" />
    <col width="150" />
    <col width="100" />

  </colgroup>
  <thead>
    <tr>
      <th></th>
      <th>题目描述</th>
      <th>所属分类</th>
      <th>创建日期</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><input type="checkbox" name="check_b" value="<%= problem.id %>"/></td>
        <td><%= problem.title  %></td>
        <td>  <%= problem.category.name  %></td>
        <td> <%= problem.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><a><%= link_to " 编辑" ,"#"%>&nbsp;|&nbsp; <%= link_to "删除 ", problem,:method=>:delete %></a></td>
      </tr>
    <% end  %>
  </tbody>
</table>
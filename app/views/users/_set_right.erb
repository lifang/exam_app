
<br/> <p><font color="blue"><b>设置权限</b></font>（<%= set_right.name %>）</p><hr/>
<table>
  <%= form_for :right ,:url=>"/users/set_right" do |f|%>
    <%= f.hidden_field :role_id ,:value=>set_right.id %>
    <%= f.hidden_field :right_num,:value=>@rights.size %>
    <% num=0 %>
    <% @rights.values.each do |right| %>
      <% if num%5 == 0 %><tr><% end %>
        <td <% if set_right.model_role!=nil && (set_right.model_role.right_sum/(2**num))%2==1 %>bgcolor="#cff"<%end%>><input type="checkbox" id="checkbox<%= right[1] %>" name="check_box<%= num %>" value="<%= right[1] %>" <% if set_right.model_role!=nil && (set_right.model_role.right_sum/(2**num))%2==1 %>checked="true"<% end %>></input><%= right[0] %></td>
        <% if num%5 == 4 %></tr><% end %>
        <% num += 1 %>
      <% end %>
    <tr>
      <td><%= f.submit "确认" %>&nbsp;&nbsp;&nbsp;<input type="button" value="取消" onclick="javascript:cancel_set_right();"/></td>
    </tr>
  <% end %>
</table>

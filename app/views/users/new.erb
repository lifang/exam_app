<div class="reg_content">
  <div class="step_one"></div>
  <table>
    <%= form_for @user, :html =>{:onsubmit => ' return check_new()', :class => "required-validate"} do |f| %>
     <tr>
        <td valign="top" align="right"><span class="must_r">*</span>注册邮箱：</td>
        <td><%= f.text_field :email, :class => "required input_style" %><span class="expForEmail">确保邮箱有效，我们将发送激活说明到此地址，每个邮箱只能使用一次<span  id="emailErr"></span><span class="must_r"><%= flash[:emailused] %></span></span></td>
      </tr>
      <tr>
        <td valign="top" align="right"><span class="must_r ">*</span>密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码：</td>
        <td><%= f.password_field :password, :class => "required input_style" %><span class="expForEmail">密码长度在6到20位之间<span id="passwordErr"></span></span></td>
      </tr>
      <tr>
        <td valign="top" align="right"><span class="must_r">*</span>确认密码：</td>
        <td><%= f.password_field :password_confirmation, :class => "required input_style" %><span class="expForEmail"><span id="confirmationErr"></span></span></td>
      </tr>
      <tr>
        <td valign="top" align="right"><span class="must_r">&nbsp;&nbsp;</span>姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp名：</td>
        <td><%= f.text_field :name, :class => "required input_style" %><span id="passwordErr"></span></td>
      </tr>
      <tr>
        <td valign="top" align="right"><span class="must_r">&nbsp;&nbsp;</span>工作单位：</td>
        <td><%= f.text_field :address, :class => "required input_style" %></td>
      </tr>
      <tr>
        <td></td>
        <td><input type="checkbox" name="checkbox"  value="999" onclick="javascript:buttoncontrol();"/>&nbsp;&nbsp;同意赶考<a href="/app/users/servers" target="blank">服务条款</a></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit"", :class =>"reg_btn_no" ,:disabled=>"disabled", :id=> "submit_button" %>  <%= image_tag "ajax-loader.gif", :id => "spinner_user", :style => "display:none" %></td>
      </tr>
    <% end %>
      <script type="text/javascript">buttoncontrol()</script>
  </table>
</div>
<div class="main_box_back">
  <h2><span>个人信息设置</span></h2>
  <div class="in">
 
    <table>
   
    <%= form_for :user ,:url=>"/users/update"  do |f|%>
        <tr>
          <% user=User.find_by_id(cookies[:user_id]) %>
          <td valign="top" align="right"><span class="must_r">*</span>用&nbsp;&nbsp;户&nbsp;&nbsp;名：</td>

          
          <td><%= f.text_field :username ,:id => "user_username",:class => "input_style",:size => "30" %><span class="expForEmail">用户名只能由字母，数字和下划线组成<span id="usernameErr"></span><span class="must_r"></span></span><span  id="username_span"></span></td>
        </tr>
        <tr>
          <td valign="top" align="right">密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码：</td>

          <td><%= f.password_field :password, :id => "user_password", :class => "input_style",:size => "30" %><span class="expForEmail">密码长度在6到20位之间<span id="passwordErr"></span></span></td>
        </tr>
        <tr>
          <td valign="top" align="right">确认密码：</td>
          <td><%= f.password_field :password_confirmation, :id => "user_password_confirmation", :class => "input_style",:size => "30" %><span class="expForEmail"><span id="confirmationErr"></span></span></td>
        </tr>
        <tr>
          <td valign="top" align="right"><span class="must_r">&nbsp;&nbsp;</span>姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp名：</td>
          <td><%= f.text_field :name ,:id => "user_name",:class => "input_style",:size => "30" %></td>
        </tr>
        <tr>
          <td valign="top" align="right"><span class="must_r">*</span>注册邮箱：</td>
          <td><%= f.text_field :email ,:id => "user_email",:class => "input_style",:size => "30" %><span class="expForEmail">确保邮箱有效，我们将发送激活说明到此地址，每个邮箱只能使用一次<span  id="emailErr"></span><span class="must_r"></span></span></td>
        </tr>
        <tr>
          <td valign="top" align="right"><span class="must_r">&nbsp;&nbsp;</span>手机号码：</td>
          <td><%= f.text_field :mobilephone ,:id => "user_mobilephone",:class => "input_style",:size => "30" %><span class="expForEmail">请填写正确的手机号码，方便我们联系您</span><span  id="mobilephone_span"></span></td>
        </tr>
        <tr>
          <td valign="top" align="right"><span class="must_r">&nbsp;&nbsp;</span>用户地址：</td>
          <td><%= f.text_area :address ,:id => "user_address",:class => "input_style",:rows => "5",:cols => "80" %><span  id="address_span"></span></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit"更新", :class =>"submit_btn" , :id=> "submit_button", :title => "编辑个人信息" %></td>
        </tr>
    
           <% end  %>
      </table>
 
  </div>
</div>

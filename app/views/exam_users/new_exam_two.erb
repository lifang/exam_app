<ul class="new_biz">
  <li>创建考试</li>
</ul>
<div class="main_box_back">
      <%= form_for :login, :html => {:name => "login_form", :id => "login_form"}, :url=>"/exam_users/#{params[:id]}/login" do %>
  <h2><span>添加考生</span></h2>
  <div class="in">
    <div class="paper_base_info">添加考生基本信息</div>
    <div class="add_details">
      <font color="red">*</font>
      选择添加考生信息方式：<input type="radio" id="login" name="login" checked="true" value="1" onclick="javascript:showpartial('login')"/>录入&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <input type="radio" id="login" name="login" value="0" onclick="javascript:showpartial('login')"/>导入
    </div>
           
  </div>
  <div class="in" id="login_block" name="login_block" style="display:block">

      <div class="paper_base_info">录入考生信息</div>
      <table>
        <colgroup>
          <col width="220"/>
          <col width="220" />
          <col width="220" />
          <col width="50" />
        </colgroup>
        <thead>
          <tr>
            <th>姓名</th>
            <th>手机号码</th>
            <th>email</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="add" name="add">
          <tr id="1">
            <td><input type="text" name="infoname1" id="infoname1" size="30"/></td>
            <td><input type="text" name="infomobile1" id="infomobile1" size="30"/></td>
            <td><input type="text" name="infoemail1" id="infoemail1" size="30"/></td>
            <td><a href="javascript:delete_item(1)">删除</a></td>
          </tr>
          <tr id="2">
            <td><input type="text" name="infoname2" id="infoname2"size="30"/></td>
            <td><input type="text" name="infomobile2" id="infomobile2" size="30"/></td>
            <td><input type="text" name="infoemail2"  id="infoemail2"size="30"/></td>
            <td><a href="javascript:delete_item(2)">删除</a></td>
          </tr>
        </tbody>
        <input type="hidden" id="rows" name="rows" value="2" />
        <input type="hidden" id="textarea" name="textarea" />
        <tr>
          <td colspan="4"><%=  link_to "追加","javascript:void(0);",:onclick=>"javascript:add_item()" %></td>
        </tr>
      </table>
      <div class="clear"></div><input type="hidden" id="login_form_value" name="login_form_value" value="" />
  </div>
  <div class="in" id="leadin_div" name="leadin_div" style="display:none">
    <%#= form_for :leadin, :html => {:name => "leadin_form", :id => "leadin_form"}, :url=>"/exam_users/leadin" do %>
      <div class="paper_base_info">导入考生信息</div>
      <div class="add_details">
        <div class="detail">按右边格式填入信息：</div>
        <div class="detail">姓名<font color="red">[空格]</font>邮箱<font color="red">[空格]</font>手机号码</div>
        <div class="clear"></div>
      </div>
      <div class="add_details">
        <div class="detail">&nbsp;&nbsp;&nbsp;&nbsp;</div>
        <div class="detail">
          <textarea id="user_info" name="user_info"cols="50" rows="6" class="textarea_style">张三  zhangsan@hotmail.com  13234567898
            李四  lisi@126.com  13445678908
            王五  wangwu@gmail.com  18912345654</textarea>
        </div>
      </div>
      <div class="clear"></div>
      <%= flash[:none] %><input type="hidden" id="leadin_form_value" name="leadin_form_value" value="" />
    <% end %>
  </div>
  <div class="in">
    <input type="button" value="保存" id="save" class="submit_btn" title="保存考生信息" onclick="javascript:getbutton('save');" />
    <input type="button" value="下一步" id="next" class="submit_btn" title="保存考试信息，并进入添加阅卷老师界面" onclick="javascript:getbutton('next');"/>
  </div>
</div>
<script type="text/javascript">
showpartial('login')
</script>
